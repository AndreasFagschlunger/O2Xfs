<project name="at.o2xfs.win32" basedir="." default="jar">
	<property name="src.dir" value="src" />
	<property name="build.dir" value="bin"/>
	<property name="classes.dir" value="${build.dir}"/>
	<property name="lib.dir" value="${build.dir}/lib"/>
	<property name="dist.dir" value="${build.dir}/dist"/>
	
	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>
		
	<target name="compile" depends="clean">
		<mkdir dir="${build.dir}" />
		<mkdir dir="${classes.dir}" />
		<mkdir dir="${lib.dir}" />
		<mkdir dir="${dist.dir}" />
		<antcall target="library" />
		<copy todir="${lib.dir}" flatten="true">
			<fileset dir="C:/Programme/Java">
				<include name="commons-codec-1.4/commons-codec-1.4.jar" />
				<include name="commons-lang-2.5/commons-lang-2.5.jar" />
			</fileset>
		</copy>
		<javac srcdir="${src.dir}" destdir="${classes.dir}">
			<classpath>				
				<pathelement location="${lib.dir}/commons-codec-1.4.jar" />
				<pathelement location="${lib.dir}/commons-lang-2.5.jar" />
			</classpath>
		</javac>
	</target>
	
	<target name="library">
		<pathconvert targetos="unix" property="basedir.unix">
			<path location="${basedir}"/>
		</pathconvert>
		<exec executable="C:/cygwin/bin/bash.exe" dir="${basedir}">
			<arg line="-l &quot;${basedir.unix}/build.sh&quot;" />
		</exec>
	</target>
	
	<target name="jar" depends="compile">		
		<jar destfile="${dist.dir}/at.o2xfs.win32.jar" basedir="${classes.dir}" />
	</target>
</project>